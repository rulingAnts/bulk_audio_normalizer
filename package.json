{
  "name": "bulk-audio-normalizer",
  "version": "1.5.0",
  "private": true,
  "description": "Electron app to batch-process WAVs for linguistics: Peak dBFS or LUFS normalization, flexible bit depth, trimming, and responsive batching.",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps || true"
  },
  "author": "",
  "license": "AGPL-3.0-only",
  "build": {
    "appId": "net.iraobi.bulk-audio-normalizer",
    "productName": "Bulk Audio Normalizer",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "src/**",
      "package.json",
      "node_modules/**"
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] }
      ],
      "icon": "build/icons/icon.icns",
      "universalApp": true
    },
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "wavesurfer.js": "^6.6.4"
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^24.13.3"
  }
}
