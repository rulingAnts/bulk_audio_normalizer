{
  "name": "bulk-audio-normalizer",
  "version": "0.3.0",
  "private": true,
  "description": "Electron app to batch-process WAVs for linguistics: Peak dBFS or LUFS normalization, flexible bit depth, trimming, and responsive batching.",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps || true"
  },
  "author": "",
  "license": "AGPL-3.0-or-later",
  "build": {
    "appId": "com.example.bulk-audio-normalizer",
    "productName": "Bulk Audio Normalizer",
    "files": [
      "src/**",
      "package.json",
      "node_modules/**"
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "mac": { "target": "dmg" },
    "win": { "target": "portable" }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "wavesurfer.js": "^6.6.4"
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^24.13.3"
  }
}
